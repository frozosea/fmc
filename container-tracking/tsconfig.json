{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "dom"
      ],
      "target": "es5",
      "allowJs": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "downlevelIteration": true,
      "types": [ "node", "mocha"],
      "typeRoots": ["./node_modules/@types"],
      "removeComments": true
   }
}